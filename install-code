#!/usr/bin/env bash

ln -s ~/Git/dotfiles/settings.json ~/.config/Code/User
ln -s ~/Git/dotfiles/keybindings.json ~/.config/Code/User

extensions=("ms-vscode.cpptools" "ms-vscode.csharp" "vscodevim.vim", "donjayamanne.python", "Ionide.Ionide-fsharp")

for i in "${extensions[@]}"
do
	code --install-extension $i
done
